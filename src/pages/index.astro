---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Highlights from '../components/Highlights.astro';
import Benefits from '../components/Benefits.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Pricing from '../components/Pricing.astro';
import Devices from '../components/Devices.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';

const title = 'Flujo TV Chile | Television en Vivo en HD/4K';
const description = 'Flujo TV es un servicio premium de television en vivo diseñado para verse nítido y fluido. Disfruta en Android, TV Box, Fire Stick, Google TV y computadora/laptop (con emulador Android) con activación rápida y soporte garantizado.';
---

<Layout title={title} description={description}>
  <Header />
  <main>
    <Hero />
    <Highlights />
    <Benefits />
    <HowItWorks />
    <Pricing />
    <Devices />
    <FAQ />
  </main>
  <Footer />
</Layout>
